#!/bin/bash

echo "===== Installing Amazon CloudWatch Agent ====="

# Install the agent
sudo yum install -y amazon-cloudwatch-agent

echo "===== Creating CloudWatch Agent JSON Config ====="

sudo tee /opt/aws/amazon-cloudwatch-agent/etc/amazon-cloudwatch-agent.json > /dev/null << 'EOF'
{
  "metrics": {
    "append_dimensions": {
      "InstanceId": "${aws:InstanceId}"
    },
    "metrics_collected": {
      "disk": {
        "measurement": [
          {"name": "disk_used_percent", "rename": "DiskUtilization"}
        ],
        "resources": [
          "/"
        ],
        "ignore_file_system_types": [
          "sysfs",
          "devtmpfs",
          "tmpfs"
        ]
      },
      "mem": {
        "measurement": [
          "mem_used_percent"
        ]
      },
      "cpu": {
        "measurement": [
          "cpu_usage_idle",
          "cpu_usage_iowait",
          "cpu_usage_system",
          "cpu_usage_user"
        ],
        "totalcpu": true
      }
    }
  }
}
EOF

echo "===== Applying CloudWatch Agent Config ====="

sudo /opt/aws/amazon-cloudwatch-agent/bin/amazon-cloudwatch-agent-ctl \
  -a fetch-config \
  -m ec2 \
  -c file:/opt/aws/amazon-cloudwatch-agent/etc/amazon-cloudwatch-agent.json \
  -s

echo "===== Enabling & Starting CloudWatch Agent ====="

sudo systemctl enable amazon-cloudwatch-agent
sudo systemctl restart amazon-cloudwatch-agent

echo "===== Checking Agent Status ====="
sudo systemctl status amazon-cloudwatch-agent --no-pager

echo "===== DONE! CloudWatch Agent is fully configured and running ====="
